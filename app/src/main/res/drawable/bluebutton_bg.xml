    <gradient
        android:endColor="@color/blueButton"
        android:angle="0"
        android:type="linear"
        android:startColor="@color/blueButton"/>

    <corners
        android:bottomLeftRadius="8dp"
        android:bottomRightRadius="8dp"
        android:topLeftRadius="8dp"
        android:topRightRadius="8dp" />

    <stroke
        android:width="2dp"
        android:color="@color/white" />

    <padding
